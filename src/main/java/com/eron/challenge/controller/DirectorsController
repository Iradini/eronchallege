import com.eron.challenge.model.api.DirectorsResponse;
import com.eron.challenge.service.DirectorsService;
import jakarta.validation.constrains.Min;
import org.springframework.validation.annotation.Validation;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RequesController;

@Validated
@RestController
public class DirectorsController(){

    private final DirectorsService directorsService;

    public DirectorsController(directorsService) { this. directorsService = directorsService; }

    @GetMapping("/api/directors")
    public Mono<DirectorsResponse> getDirectors() {
        return directorsService.getDirectorsAboveThreshold(threshold);
    }
}